@import 'nib'

html
  -webkit-font-smoothing antialized

body
  background-color: rgb(255, 255, 255);
  color: rgb(51, 51, 51);
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  position relative
  line-height 30px
  font-size 17px

.browsehappy
  margin 0.2em 0
  background red
  color #f57a6b

.panel-info
  background-color rgba(0, 195, 255, 0.09)
  border-color rgba(0, 151, 197, 0.09)
  padding 15px
  font-size 14px
  line-height 26px

.th
  width 100%
  height 200px

  img.right
    width 50px

.error input, .error textarea, .error select
  margin-bottom 16px

.btn-wrapper
  margin-bottom 25px

.content-wrapper
  height 100%
  min-height 1000px

.footer
  background-color rgb(245, 245, 245)
  bottom 0px
  box-sizing border-box
  color rgb(51, 51, 51)
  display block
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size 14px
  height 60px
  line-height 20px
  position relative
  width 100%

.copyright
  display inline-block
  margin-top 10px

.contact-address
  font-size 18px
  width 300px
  padding 15px

.business-name
  font-size 18px
  font-weight 700
  margin-bottom 5px !important
  display inline-block

.article-img
  float right