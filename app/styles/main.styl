@import 'nib'

@import 'header'
@import 'footer'
@import 'aside'
@import 'functions'

/**********************
     Variables
***********************/

body
	color rgb(51, 51, 51)
	font font-custom
	position relative
	line-height 30px

html
	-webkit-font-smoothing antialized

/**********************
     =main content
**********************/
.error input, .error textarea, .error select
	margin-bottom 16px

.btn-wrapper
	margin-bottom 25px

.content-wrapper
	height 100%
	min-height 1000px

.article-img
	float right

/**********************
      =About
***********************/
.custom-list
	comma-list()

table
	stripe()
	td
		padding 4px 10px

table#users
	stripe #303030 #494848
	td, th
		color white

/**********************
    =contact us
***********************/

.contact-address
	custom-radius 15px
	border 1px lightgray solid
	font-size 18px
	width 300px
	padding 15px

.business-name
	font-size 18px
	font-weight 700
	margin-bottom 5px !important
	display inline-block

/**********************
    =form
***********************/
textarea, input
	border 1px solid red

