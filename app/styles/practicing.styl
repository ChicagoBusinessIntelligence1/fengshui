/**********************
    Using Stylus Examples
***********************/

/*Mixins*/

/*border-radius*/
any-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

.btn
  any-radius 15px

.custom-object
  any-radius 100px 30px / 50px 10px
  background-color #c6eeff
  width 300px
  height 300px
  border #56c7ff
  &:hover
    opacity 0.5

/*striped table*/
stripe(even = #fff, odd = #eee)
  tr
    background-color odd
    &.even
    &:nth-child(even)
      background-color even

table
  stripe()
  td
    padding 4px 10px

table#users
  stripe #303030 #494848
  td, th
    color white

/*comma-list*/

inline-list()
  li
    display inline

comma-list()
  inline-list()
  li
    &:after
      content ', '
    &:last-child:after
      content ''

.custom-list
  comma-list()
