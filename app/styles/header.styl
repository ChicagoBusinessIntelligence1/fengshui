@import 'nib'

@import 'functions'

/**********************
     =top-navbar
***********************/
.top-nav-wrapper
	padding 0px

.nav-text
.brand-name
.navbar-brand
	cursor pointer
	color #f5f5f5 !important

.span-top-nav
	display inline-block
	padding-left 5px
	padding-right  5px
	&:hover
	&:active
	&:focus
		color #dddddd

.brand-name
	margin-left 5px

.btn-search
	margin-left 5px

.ul-top-menu
	margin-bottom 0px !important

.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus
	background-color inherit

.logo-text
	margin-top 10px
	margin-bottom 15px

.navbar-app
	margin-bottom 0px
	border-radius 0px
	background-color #555555
	a
		cursor pointer

.img-fb
	width 20px
	height 20px
	margin-right (@width / 4)

.img-admin
	width 18px
	height 18px
	margin-right (@width / 4)


