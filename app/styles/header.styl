@import 'nib'

@import 'functions'

/**********************
     =top-navbar
***********************/
.top-nav-wrapper
	padding 0px

.top-menu
	padding 3px
	.container
		ul
			li
				a
					cursor pointer
					color #f5f5f5

.btn-search
	margin-left 5px

.ul-top-menu
	margin-bottom 0px !important

.logo-text
	margin-top 10px
	margin-bottom 15px

.navbar-app
	margin-bottom 0px
	border-radius 0px
	background-color #555555
	a
		color #dddddd !important
		cursor pointer
	span
		color #dddddd !important

.img-fb
	width 20px
	height 20px
	margin-right (@width / 4)

.img-admin
	width 18px
	height 18px
	margin-right (@width / 4)

.fb-name
	link-custom()
	font-size 15px
	display inline-block

/**********************
			=Search
***********************/

.form-header
	width 280px
	display inline-block
	margin-left 15px

.avatar
	display inline-block
	position relative
	top -2px
	left -5px

