.article-wrapper
  .row
    .col-lg-12
      article
        h3 {{post.title}}
          h5  {{post.time | date:'short'}}
        .row
          .col-lg-12
            p {{post.body}}
            ul.list-unstyled.ul-comment
              li(ng-repeat='c in post.comments')
                img.img-fb(ng-src="{{c.userPic}}")
                span.user-name-comment {{c.userName}}
                p.p-comment {{c.comment}}
                p.p-post-time {{c.time| date:'short'}}
                hr


  form(role='form', ng-show='auth.user')
    .row
      .col-sm-12.form-group
        textarea.form-control.textarea(placeholder='Write a comment', ng-model='comment.val')
        br
        button.btn.btn-info(ng-click='addComment(post.$id, comment.val, userName, userPic)') Post

