.article-wrapper
  .row
    .col-lg-12
      article
        h3
          a(href='#') {{post.title}}
        h6 Written By
          a(href='#')
            | on {{post.time | date:'short'}}
        .row
          .col-lg-12
            img.article-img(src="http://placehold.it/400x240&text=[img]")
            p {{post.body}}

  form(role='form')
    .row
      .col-sm-12.form-group
        textarea.form-control(placeholder='Write a comment')

